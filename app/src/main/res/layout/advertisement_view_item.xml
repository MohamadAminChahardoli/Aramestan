<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_ad"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mamod"/>

        <TextView
            android:id="@+id/txt_mobile_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_ad"
            android:layout_toLeftOf="@id/img_ad"
            android:text="تلفن تماس : 09372392731"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ad_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_mobile_ad"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@id/img_ad"
            android:text="هزینه :200.000 تومان"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_ad"
  android:scrollbars="vertical"
            android:lineSpacingExtra="5dp"
            android:padding="15dp"
            android:text="مداح اهل بیت حاج محمود کریمی برگزاری مجالس ترحیم مولودی مرثیه خوانی ،ختم وخیرات و انجام تمام خدمات در این زمینه در خدمت شما عزیزان هستم برای هماهنگی مجالس شما  لطفا با شماره تلفن مربوطه تماس حاصل کنید"
            android:textColor="#000"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>