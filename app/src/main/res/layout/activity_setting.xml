<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txt_receive_notify_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:text="@string/receive_notifications_caption"/>

        <TextView
            android:id="@+id/txt_receive_notify_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="#aa757575"
            android:layout_below="@+id/txt_receive_notify_caption"
            android:text="@string/receive_notification_description"
            android:padding="15dp"
            android:lineSpacingExtra="5dp"/>

        <Switch
            android:id="@+id/switch_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#99757575"
            android:layout_below="@+id/txt_receive_notify_description"
            android:layout_margin="20dp"/>

    </RelativeLayout>

</RelativeLayout>