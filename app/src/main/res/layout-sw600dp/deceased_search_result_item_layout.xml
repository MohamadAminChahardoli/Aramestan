<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_deceased_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/no_img"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_title_full_name"
            android:text="شهید نام نام خانوادگی"
            android:layout_toLeftOf="@+id/img_deceased_photo"
            android:layout_centerVertical="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_father_name"
            android:text="فرزند نام پدر"
            android:layout_toLeftOf="@+id/img_deceased_photo"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_below="@+id/txt_title_full_name"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>



</RelativeLayout>